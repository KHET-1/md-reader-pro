{
  "name": "md-reader-pro",
  "version": "3.1.0",
  "type": "module",
  "description": "AI-powered markdown reader with local processing and complete privacy protection",
  "scripts": {
    "dev": "webpack serve --config webpack.config.cjs --mode development --open",
    "build": "webpack --mode production --config webpack.config.cjs",
    "build:clean": "webpack --mode production --config webpack.config.cjs --no-color",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:performance": "jest tests/performance.test.js --verbose",
    "test:benchmarks": "jest tests/benchmarks.test.js --verbose --runInBand",
    "test:optimize": "node scripts/optimize-tests.js",
    "test:all": "npm run test && npm run test:performance && npm run test:benchmarks",
    "performance:monitor": "jest tests/performance.test.js tests/benchmarks.test.js --verbose --runInBand",
    "performance:regression": "node scripts/performance-regression.js",
    "performance:update-baseline": "node scripts/performance-regression.js --update-baseline",
    "lint": "eslint src/**/*.js --fix",
    "lint:clean": "eslint src/**/*.js --fix --no-color",
    "validate": "npm run lint && npm run test && npm run build",
    "validate:clean": "npm run lint:clean && npm run test && npm run build:clean",
    "validate:full": "npm run lint && npm run test:all && npm run build",
    "validate:production": "npm run validate:full && npx playwright test tests/e2e/production-coverage-simple.spec.js",
    "test:e2e": "npx playwright test",
    "test:e2e:production": "npx playwright test tests/e2e/production-coverage-simple.spec.js",
    "test:e2e:headed": "npx playwright test --headed",
    "test:e2e:ui": "npx playwright test --ui",
    "production:validate": "npm run build && npm run production:checklist",
    "production:checklist": "echo 'Manual production validation checklist - see PRODUCTION_TESTING_STRATEGY.md'",
    "clean:test": "jest --clearCache",
    "clean:output": "node scripts/clean-output.js",
    "deploy:prepare": "node scripts/deploy.cjs",
    "deploy:build": "npm run build && npm run deploy:prepare",
    "deploy:validate": "npm run validate:full && npm run deploy:build",
    "deploy:github-pages": "npm run deploy:validate",
    "pages:setup": "echo 'Setting up GitHub Pages - see DEPLOYMENT.md for instructions'",
    "pages:status": "echo 'Check deployment status at: https://your-username.github.io/md-reader-pro/status.html'"
  },
  "repository": "https://github.com/khet-1/md-reader-pro.git",
  "dependencies": {
    "dompurify": "^3.0.9",
    "marked": "^5.1.2"
  },
  "devDependencies": {
    "@babel/core": "^7.22.0",
    "@babel/preset-env": "^7.22.0",
    "@playwright/test": "^1.55.0",
    "@semantic-release/changelog": "^6.0.0",
    "babel-loader": "^9.2.1",
    "copy-webpack-plugin": "^11.0.0",
    "css-loader": "^6.8.0",
    "eslint": "^8.44.0",
    "html-webpack-plugin": "^5.6.4",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "^29.7.0",
    "mini-css-extract-plugin": "^2.7.0",
    "semantic-release": "^22.0.0",
    "style-loader": "^3.3.0",
    "webpack": "^5.88.0",
    "webpack-cli": "^6.0.1",
    "webpack-dev-server": "^5.2.2"
  },
  "overrides": {
    "tough-cookie": "4.1.3"
  }
}
