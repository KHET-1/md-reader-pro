{
  "name": "md-reader-pro",
  "version": "3.0.0", 
  "type": "module",
  "description": "AI-powered markdown reader with local processing and complete privacy protection",
  "scripts": {
    "dev": "webpack serve --mode development --open",
    "build": "webpack --mode production",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.js --fix",
    "lint:check": "eslint src/**/*.js",
    "validate": "npm run lint && npm run test",
    "clean": "rm -rf dist coverage",
    "start": "npm run dev",
    "preview": "npm run build && npx serve dist"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/KHET-1/md-reader-pro.git"
  },
  "keywords": ["markdown", "ai", "tensorflow", "privacy", "local-processing", "reader"],
  "author": "Human + Claude AI Collaboration",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "@tensorflow/tfjs": "^4.0.0",
    "marked": "^5.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.22.0",
    "@babel/preset-env": "^7.22.0",
    "@semantic-release/changelog": "^6.0.0",
    "babel-loader": "^9.1.0",
    "css-loader": "^6.8.0",
    "eslint": "^8.44.0",
    "html-webpack-plugin": "^5.5.0",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "^29.5.0",
    "semantic-release": "^22.0.0",
    "style-loader": "^3.3.0",
    "webpack": "^5.88.0",
    "webpack-cli": "^6.0.1",
    "webpack-dev-server": "^5.2.2"
  }
}
