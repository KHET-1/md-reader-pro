{
  "name": "md-reader-pro",
  "version": "3.4.0",
  "type": "module",
  "description": "Enterprise-grade markdown editor with advanced animations and comprehensive testing",
  "scripts": {
    "dev": "webpack serve --config webpack.config.cjs --mode development",
    "dev:server": "webpack serve --config webpack.config.cjs --mode development",
    "dev:ready": "node scripts/dev-ready.js",
    "dev:orchestrate": "node scripts/dev-orchestrator.cjs",
    "logs:analyze": "node scripts/log-analyzer.cjs",
    "serve:dist": "http-server dist -s -c-1 -p %PORT%",
    "build": "webpack --mode production --config webpack.config.cjs",
    "build:clean": "webpack --mode production --config webpack.config.cjs --no-color",
    "build:analyze": "webpack --mode production --config webpack.config.cjs --analyze",
    "build:bundle-analyzer": "webpack-bundle-analyzer dist",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:performance": "jest tests/performance.test.js --verbose",
    "test:benchmarks": "jest tests/benchmarks.test.js --verbose --runInBand",
    "test:optimize": "node scripts/optimize-tests.js",
    "test:all": "npm run test && npm run test:performance && npm run test:benchmarks",
    "performance:monitor": "jest tests/performance.test.js tests/benchmarks.test.js --verbose --runInBand",
    "performance:regression": "node scripts/performance-regression.js",
    "performance:update-baseline": "node scripts/performance-regression.js --update-baseline",
    "performance:budget": "node scripts/performance-budget.js",
    "performance:budget:check": "npm run build && npm run performance:budget",
    "lint": "eslint src/**/*.js --fix",
    "lint:clean": "eslint src/**/*.js --fix --no-color",
    "validate": "npm run lint && npm run test && npm run build",
    "validate:clean": "npm run lint:clean && npm run test && npm run build:clean",
    "validate:full": "npm run lint && npm run test:all && npm run build",
    "validate:production": "npm run validate:full && npx playwright test tests/e2e/production-coverage-simple.spec.js",
    "test:edge-tools": "npx playwright test tests/edge-tools.test.js --project=edge",
    "test:accessibility": "npx playwright test tests/accessibility.test.js --project=edge",
    "test:performance:edge": "npx playwright test tests/performance-edge.test.js --project=edge",
    "test:e2e": "npx playwright test",
    "test:e2e:production": "npx playwright test tests/e2e/production-coverage-simple.spec.js",
    "test:e2e:headed": "npx playwright test --headed",
    "test:e2e:ui": "npx playwright test --ui",
    "test:e2e:comprehensive": "npx playwright test tests/e2e/comprehensive-e2e.spec.js",
    "test:e2e:performance": "npx playwright test tests/e2e/performance-e2e.spec.js",
    "test:e2e:all": "npx playwright test tests/e2e/ --reporter=html",
    "test:e2e:run": "node scripts/run-e2e-tests.js",
    "test:server": "node test-server.cjs",
    "production:validate": "npm run build && npm run production:checklist",
    "production:checklist": "echo 'Manual production validation checklist - see PRODUCTION_TESTING_STRATEGY.md'",
    "clean:test": "jest --clearCache",
    "clean:output": "node scripts/clean-output.js",
    "deploy:prepare": "node scripts/deploy.cjs",
    "deploy:build": "npm run build && npm run deploy:prepare",
    "deploy:validate-full": "npm run validate:full && npm run deploy:build",
    "deploy:github-pages": "npm run deploy:validate",
    "pages:setup": "echo 'Setting up GitHub Pages - see GITHUB_PAGES_SETUP.md for instructions'",
    "pages:status": "echo 'Check deployment status at: https://khet-1.github.io/md-reader-pro/status.html'",
    "deploy:validate": "node scripts/validate-deployment.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/khet-1/md-reader-pro.git"
  },
  "homepage": "https://khet-1.github.io/md-reader-pro",
  "dependencies": {
    "@microsoft/eslint-formatter-sarif": "^3.1.0",
    "dompurify": "^3.2.7",
    "express-rate-limit": "^8.1.0",
    "marked": "^16.3.0",
    "prismjs": "^1.30.0"
  },
  "devDependencies": {
    "@babel/core": "^7.28.4",
    "@babel/preset-env": "^7.28.3",
    "@playwright/test": "^1.56.0",
    "@semantic-release/changelog": "^6.0.3",
    "babel-loader": "^10.0.0",
    "copy-webpack-plugin": "^13.0.1",
    "css-loader": "^7.1.2",
    "eslint": "^9.36.0",
    "express": "^5.1.0",
    "html-webpack-plugin": "^5.6.4",
    "http-server": "^14.1.1",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "mini-css-extract-plugin": "^2.7.0",
    "semantic-release": "^24.2.9",
    "style-loader": "^4.0.0",
    "webpack": "^5.102.0",
    "webpack-bundle-analyzer": "^4.9.0",
    "webpack-cli": "^6.0.1",
    "webpack-dev-server": "^5.2.2"
  },
  "overrides": {
    "tough-cookie": "4.1.3"
  }
}
